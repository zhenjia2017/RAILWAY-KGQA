<!--pages/search/search.wxml-->
<view class="top-bar">
    <view class="box-search">
        <input class="input-q" bindinput="getInput" placeholder="请输入问题" value="{{inputValue}}" />
        <icon type="search" wx:if="{{isSearch}}" />
        <icon type="clear" wx:if="{{isClear}}" bindtap="clearTap" />
    </view>
    <button class="btn-query" type="primary" size="mini" bindtap="searchTap">查询</button>
</view>

