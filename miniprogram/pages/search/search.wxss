page {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.top-bar {
    display: inline-block;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.box-search {
    display: flex;
    flex-direction: row;
    border: 1px solid #888888;
    border-radius: 20px;
    width: 300px;
    height: 40px;
    align-items: center;
    margin-top: 10px;
    margin-left: 5px;
}

.input-q {
    margin-left: 15px;
    width: 250px;
    font-size: 15px;
}

.btn-query {
    color: #ffffff;
    border-radius: 10px;
    margin-top: 10px;
}

button[type="primary"] {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.result-script {
    height: 120px;
    border: 2px solid #000000;
    margin-top: 5px;
}

.output-q {
    width: 370px;
    height: 120px;
    font-size: 15px;
}

.item {
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    /*vertical-align: middle;*/
    display: flex;
    flex-flow: column;
    align-items: center;
    background: rgb(7, 180, 96);
    font-size: 15px;
    color: #ffffff;
}

.row1 {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-around;
}

.row2 {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-around;
    border-top: 1rpx dashed #C0C0C0
}

.img {
    width: 100rpx;
    height: 100rpx;
}

